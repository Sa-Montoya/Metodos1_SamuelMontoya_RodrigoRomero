    "def factorial (numero:float):\n",
    "    if numero==0:\n",
    "        respuesta=1\n",
    "        \n",
    "    elif numero>0:\n",
    "        i=1\n",
    "        respuesta=1\n",
    "        while i <= numero:\n",
    "            respuesta=respuesta*i\n",
    "            i+=1\n",
    "    return respuesta\n",
    "        "
   ]
  },
